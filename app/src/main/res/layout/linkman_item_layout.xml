<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/linkman_item_img"
        android:background="@drawable/image_circle_boeder"
        android:layout_width="70dp"
        android:layout_height="70dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="aaa"
        android:textSize="20sp"
        android:textColor="#111"
        android:id="@+id/linkman_item_name"
        android:layout_toRightOf="@id/linkman_item_img"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[在线]"
        android:textSize="20sp"
        android:textColor="#111"
        android:id="@+id/linkman_item_state"
        android:layout_alignBottom="@id/linkman_item_img"
        android:layout_toRightOf="@id/linkman_item_img"
        android:layout_marginLeft="20dp"
        />
</RelativeLayout>
